.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
  vertical-align: middle;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
    margin-top: 20rpx;
}
.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.share-img{
    margin-left: 30rpx;
}
.horizon{
    width: 600rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top:46rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2rpx;
    color: #666;
}
.tool image{
    width: 100rpx;
    height: 100rpx;
}


